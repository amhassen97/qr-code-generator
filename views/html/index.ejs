          <div class="row">
           

            <div class="col-sm col-xs">
              <div class="form-group">
                <label for="qrSize">Size: </label>
                <input class="form-control qrProperty" data-qr-property="size" type="number" name="qrSize" id="qrSize">
              </div>
            </div>

            <div class="col-sm col-xs">
                <div class="form-group">
                  <label for="qrMargin">Margin: </label>
                  <input class="form-control qrProperty" data-qr-property="margin" type="number" name="qrMargin" id="qrMargin">
                </div>
            </div>

            <!-- <div class="col-sm col-xs">

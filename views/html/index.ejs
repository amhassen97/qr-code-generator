          <div class="row">
            <div class="col-sm col-xs">
              <div class="form-group">
                <label for="qrURL">Enter URL: </label>
                <input class="form-control qrProperty" data-qr-property="text" type="url" name="qrURL" id="qrURL">
              </div>
            </div>
          </div>

